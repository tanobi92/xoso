<div id="<%= modal %>" class="modal fade" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title"><%= __('Menu Info'); %></h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="form-group clearfix">
                        <label class="col-sm-2 control-label"><%= __('Label'); %></label>
                        <div class="col-sm-4">
                            <input id="txt_label" name="txt_label" type="text" placeholder="<%= __('Enter label'); %>" required="required" class="form-control" />
                            <input id="_id" name="_id" class="_id" type="hidden" />
                            <input id="row_id" name="row_id" class="row_id" type="hidden" />
                        </div>
                        <label class="col-sm-2 control-label"><%= __('Parent'); %></label>
                        <div class="col-sm-4">
                            <select class="form-control" id="txt_parent" name="txt_parent">
                            </select>
                        </div>
                    </div>
                    <div class="form-group clearfix">
                        <label class="col-sm-2 control-label"><%= __('Href'); %></label>
                        <div class="col-sm-4">
                            <input id="txt_href" name="txt_href" type="text" placeholder="<%= __('Enter href'); %>" required="required" class="form-control" />
                        </div>
                        <label class="col-sm-2 control-label"><%= __('Icon'); %></label>
                        <div class="col-sm-4">
                            <input id="txt_icon" name="txt_icon" type="text" class="form-control" placeholder="<%= __('Enter icon'); %>" required="">
                        </div>
                    </div>
                    <div class="form-group clearfix">
                        <label class="col-sm-2 control-label"><%= __('Order'); %></label>
                        <div class="col-sm-4">
                            <input id="txt_order" name="txt_order" type="number" class="form-control" placeholder="<%= __('Order menu'); %>" required="">
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="btnSave" type="button" class="btn btn-sm btn-primary"><i class="fa fa-save"></i><%= __('Save'); %></button>
                <button id="btnCancel" type="button" class="btn btn-sm btn-default" data-dismiss="modal"><%= __('Cancel'); %></button>
            </div>
        </div>
    </div>
</div>