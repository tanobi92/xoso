<!-- Modal -->
<div class="modal fade" id="mdUpdateProvince" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">×</button>
                <h4 class="modal-title">Thêm mới Tỉnh/TP</h4>
            </div>
            <div class="modal-body">
                <form id="frmUpdateProvince">
                    <input type="hidden" id="txtProvinceId">
                    <div class="form-group">
                        <label for="provinceName">Tên Tỉnh/TP:</label>
                        <input type="text" class="form-control" id="txtProvinceName">
                    </div>
                    <div class="form-group">
                        <label for="location">Loại xổ số:</label>
                        <select class="form-control" name="location" id="cbxLocation">
                            <% locations.forEach(function (item) { %>
                                <option value="<%= item.code %>"> <%= item.name %></option>
                            <% }) %>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="status">Trạng thái:</label>
                        <select class="form-control" name="status" id="cbxStatus">
                            <option value="1" selected>Hoạt động</option>
                            <option value="0">Không hoạt động</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default btn-close" data-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary btn-save">Lưu</button>
            </div>
        </div>
    </div>
</div>
